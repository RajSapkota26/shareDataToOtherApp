<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F253081D"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dpa" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/back_txt"
            android:text="AABISKA PAUDEL"
            android:textSize="35sp"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/txt_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:layout_margin="15dp"
            android:text="@string/txt_body"
            android:textColor="#fff" />

        <Button
            android:id="@+id/share_Btn"
            android:layout_margin="15dp"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#69F0AE"
            android:drawableRight="@drawable/ic_baseline_screen_share_24"
            android:drawablePadding="10dp"
            android:text="Share"
            android:drawableTint="#F253081D"
            android:padding="5dp" />

    </LinearLayout>
</LinearLayout>